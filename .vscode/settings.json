// 설정을 이 파일에 넣어서 기본 설정을 덮어씁니다.
{
    "editor.tabSize": 2,
    "editor.autoIndent": false,
    "editor.insertSpaces": true,
    "explorer.autoReveal": false,
    "editor.detectIndentation": true,
    "editor.formatOnSave": false,
    "editor.fontLigatures": true,
    "editor.wordWrap": "on",
    "editor.snippetSuggestions": "top",
    "editor.quickSuggestions": {
        "strings": true
    },
    "workbench.iconTheme": "eq-material-theme-icons",
    "workbench.activityBar.visible": true,
    "emmet.syntaxProfiles": {
        "javascript": "jsx"
    },
    // files
    "files.associations": {
        "*.js": "javascriptreact",
        "*.vue": "vue"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.DS_Store": true,
        "**/.idea": true,
        "**/.vscode": false,
        "**/yarn.lock": true,
        "**/tmp": true,
        // "**/node_modules": true,
        "**/bower_components": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/tmp": true,
        "**/build": true
    },
    "files.trimTrailingWhitespace": true,
    "search.exclude": {
        // "**/node_modules": true,
        // "**/bower_components": true,
        "**/.git": true,
        "**/.DS_Store": true,
        "**/tmp": true,
        "**/coverage": true,
        "**/build": true,
        "**/Pods": true,
        "**/*.xcodeproj": true,
        "**/*.xcworkspace": true,
        "**/.meteor": true
    },
    "html.suggest.html5": true,
    // "javascript.implicitProjectConfig.experimentalDecorators": true,
    "javascript.implicitProjectConfig.checkJs": true,
    "npm-intellisense.scanDevDependencies": false,
    // path-intellisense
    "path-intellisense.extensionOnImport": true,
    "path-intellisense.mappings": {
        "/": "${workspaceRoot}",
        "@/": "${workspaceRoot}/client/bundles/src",
        "@app/": "${workspaceRoot}/client/app"
    },
    // flow
    "javascript.validate.enable": false,
    // prettier
    "prettier.eslintIntegration": true,
    "prettier.stylelintIntegration": true,
    "prettier.singleQuote": true,
    "prettier.trailingComma": "none",
    "prettier.jsxBracketSameLine": true,
    "prettier.parser": "flow",
    "prettier.semi": false,
    "prettier.printWidth": 150,
    "todohighlight.isEnable": true,
    "todohighlight.include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "**/*.html", "**/*.php", "**/*.css", "**/*.scss", "**/*.vue"],
    // eslint
    "eslint.autoFixOnSave": true,
    "eslint.provideLintTask": true,
    "eslint.workingDirectories": [
        "./client/bundles"
    ],
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "html",
        "vue",
        {
            "language": "vue",
            "autoFix": true
        }
    ],
    "beautify.config": {
        "editorconfig": true,
        "indent_size": 2,
        "wrap_attributes": "force-aligned",
        "wrap_attributes_indent_size": 2,
        "wrap_line_length": 150
    },
    "beautify.language": {
        "html": ["htm", "html"]
    },
    //https://github.com/vuejs/vetur/blob/master/server/src/modes/template/services/htmlFormat.ts
    "vetur.format.defaultFormatter.html": "js-beautify-html",
    "vetur.format.defaultFormatterOptions": {
        "js-beautify-html": {
            "editorconfig": true,
            "indent_size": 2,
            "wrap_attributes": "force-aligned",
            "wrap_attributes_indent_size": 2,
            "wrap_line_length": 150
        }
    },
    "attrsSorter.order": [
        // "is",
        // "v-for",
        // "v-if",
        // "v-else-if",
        // "v-else",
        // "v-show",
        // "v-cloak",
        // "v-once",
        // "v-pre",
        // "id",
        // "ref",
        // "key",
        // "slot",
        // "v-model",
        // "v-model.+",
        // "v-bind",
        // "v-bind.+",
        // ":.+",
        // "v-text",
        // "v-text.+",
        // "v-html",
        // "v-html.+",
        // "class",
        // "v-on.+",
        // "@.+",
        // "name",
        // "data-.+",
        // "ng-.+",
        // "src",
        // "for",
        // "type",
        // "href",
        // "values",
        // "title",
        // "alt",
        // "role",
        // "aria-.+",
        // "$unknown$"
    ],
    "editor.minimap.enabled": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false
}